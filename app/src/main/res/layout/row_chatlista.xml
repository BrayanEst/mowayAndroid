<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
     android:visibility="gone"
        android:id="@+id/cardviewRow_Users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/colorAzul"
        android:elevation="10dp"
        android:layout_margin="6dp">


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imguserchat1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

        <TextView
            android:id="@+id/textonameuser1"

            android:layout_width="127dp"

            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="name_user"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

    <ImageView
        android:visibility="gone"
        android:src="@drawable/ic_desconectado"
        android:id="@+id/icon_desconectado"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>

        <TextView
            android:visibility="gone"
           android:text="afdfasdfafadsf"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvDesconectado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>

        <ImageView
          android:visibility="gone"
            android:src="@drawable/ic_conectado"
            android:id="@+id/ic_conectado"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvConectado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>