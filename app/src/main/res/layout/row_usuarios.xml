<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewRow_Users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/colorAzul"
        android:elevation="10dp"
        android:layout_margin="6dp">


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imguserchat1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

        <TextView
            android:id="@+id/textonameuser1"

            android:layout_width="165dp"

            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="name_user"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_add"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_add_peple"
            android:textColor="#000"
            android:text="Agregar"
            android:textSize="10dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_send"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/colorgris"
            android:drawableLeft="@drawable/ic_send"
            android:textColor="#000"
            android:text="solisitud enviada"
            android:textSize="10dp"/>
        <Button
            android:visibility="gone"
            android:id="@+id/tengosolisitud"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#4D4BDB"
            android:drawableLeft="@drawable/ic_check"
            android:textColor="#000"
            android:text="Aceptar solicitud"
            android:textSize="10dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_amigos"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_check"
            android:textColor="#000"
            android:text="Amigos"
            android:textSize="10dp"/>

        <ProgressBar
            android:id="@+id/progresBarRow"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>